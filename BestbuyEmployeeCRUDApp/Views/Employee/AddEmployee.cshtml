@model Employee

<h2>Create a New Employee</h2>

@using (Html.BeginForm("AddEmployeeToDatabase", "Employee", "Post"))
{
    <input asp-for="EmployeeID" type="hidden" value="" />

    <label asp-for="FirstName" class="control-label">First Name</label>
    <input type="text" name="FirstName" class="form-control" value="@Model.FirstName" />

    <label asp-for="MiddleInitial" class="control-label">Middle Initial</label>
    <input type="text" name="MiddleInitial" required class="form-control" value="@Model.MiddleInitial" />

    <label asp-for="LastName" class="control-label">Last Name</label>
    <input type="text" name="LastName" class="form-control" value="@Model.LastName" />

    <label asp-for="EmailAddress" class="control-label">Email Address</label>
    <input type="text" step="0.01" name="EmailAddress" class="form-control" value="@Model.EmailAddress" />

    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
    <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />

    <label asp-for="Title" class="control-label">Title</label>
    <input type="text" name="Title" class="form-control" value="@Model.Title" />

    <label asp-for="DateOfBirth" class="control-label">Date of Birth</label>
    <input type="datetime" name="Title" class="form-control" value="@Model.DateOfBirth" />


    <input type="submit" value="Add Employee" class="btn btn-primary" />
}
